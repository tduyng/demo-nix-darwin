# ghostty +show-config --default --docs | nvim

# key changes
macos-option-as-alt = false

# apparence
theme = TokyoNight Storm
font-family = Hack Regular
font-size = 12
font-thicken = true

# background-opacity = 0.9
# background-blur = true
# background-blur-radius = 20
macos-titlebar-style = transparent
mouse-hide-while-typing = true
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor 

# permissions
confirm-close-surface = false
clipboard-paste-protection = false
unfocused-split-opacity = 1.0
copy-on-select = clipboard
clipboard-read = allow
clipboard-write = allow

# keybindings
keybind = super+h=goto_split:left
keybind = super+j=goto_split:bottom
keybind = super+k=goto_split:top
keybind = super+l=goto_split:right
keybind = global:ctrl+grave_accent=toggle_quick_terminal

# Toggle split zoom (equivalent to TogglePaneZoomState)
keybind = cmd+enter=toggle_split_zoom

# Fullscreen
keybind = ctrl+cmd+f=toggle_fullscreen

# Font size controls
keybind = ctrl+==increase_font_size:1
keybind = ctrl+-=decrease_font_size:1
keybind = ctrl+à=reset_font_size
keybind = super+==increase_font_size:1
keybind = super+-=decrease_font_size:1
keybind = super+à=reset_font_size

# New window
keybind = shift+ctrl+n=new_window

# Tab operations
keybind = ctrl+page_up=previous_tab
keybind = ctrl+page_down=next_tab
keybind = cmd+x=close_surface

keybind = super+digit1=goto_tab:1
keybind = super+digit2=goto_tab:2
keybind = super+digit3=goto_tab:3
keybind = super+digit4=goto_tab:4
keybind = super+digit5=goto_tab:5
keybind = super+digit6=goto_tab:6
keybind = super+digit7=goto_tab:7
keybind = super+digit8=goto_tab:8
keybind = super+digit9=goto_tab:9
